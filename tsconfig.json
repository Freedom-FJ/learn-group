{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    }
  },
  "include": ["mock/**/*", "src/**/*", "config/**/*", ".umirc.ts", "types.d.ts"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs"]
}
